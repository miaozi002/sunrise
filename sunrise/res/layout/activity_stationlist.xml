<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.download.DownloadActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <TextView
            android:id="@+id/textView0"
            style="@style/title_text"
            android:text="@string/stationList" />
        <ImageView
            style="@style/ib_pre" 
            android:layout_gravity="center_vertical"
            
          />
        
        <ImageButton
            style="@style/ib"
            android:id="@+id/ib_upload"
            android:onClick="upload"
            android:src="@drawable/upload"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="45dp" />

        <ImageButton
            android:id="@+id/ib_download3"
             style="@style/ib"
            android:onClick="download"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/download"
             />

    </FrameLayout>

    <ListView
        android:layout_marginTop="5dp"
        android:id="@+id/lv_station_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp" >
    </ListView>

   

    <TextView
        android:id="@+id/tv_switch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:background="@drawable/round_rec"
        android:text="@string/scanNFCPrompt"
        android:textColor="#ffffff"
        android:textSize="12sp" 
        />

</LinearLayout>