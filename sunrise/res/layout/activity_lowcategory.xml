<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".LowCategoryActivity" >

    <Button
        android:id="@+id/check_result"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:text="@string/queryResult"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_switch"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/check_result"
        android:layout_marginTop="5dp"
        android:background="#000000"
        android:gravity="center"
        android:text="@string/switchLayer"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/btn_data_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_switch"
        android:layout_marginTop="5dp"
        android:gravity="start"
        android:textSize="20sp" />

</RelativeLayout>